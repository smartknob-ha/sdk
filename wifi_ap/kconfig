menu "Smartknob-HA Components"

    menu "Wifi AP"

        config AP_CREDENTIALS_FROM_KCONFIG
            bool "AP Credentials from KConfig"
            help
                Select this if the SSID and password should be taken from KConfig

        config AP_SSID
            string "AP SSID"
            depends on AP_CREDENTIALS_FROM_KCONFIG

        config AP_PASSWORD
            string "AP Password"
            depends on AP_CREDENTIALS_FROM_KCONFIG

        config AP_CHANNEL
            int "AP Channel to use"
            default 10

        config AP_MAX_CONNECTIONS
            int "Max connections to AP"
            default 10

    endmenu

endmenu