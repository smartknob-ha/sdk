menu "Smartknob-HA Components"

    menu "LED Strip"

        config LED_STRIP_GPIO
            int "GPIO number for LED data"
            default 17
        config LED_STRIP_NUM
            int "Number of LED's in strip"
            default 8
        config LED_RMT_CHANNEL
            int "What RMT channel to use for the LED's"
            default 0
    endmenu
endmenu